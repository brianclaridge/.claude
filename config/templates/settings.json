{
  "forceLoginMethod": "claudeai",
  "outputStyle": "Default",
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false,
  "enableAllProjectMcpServers": true,
  "permissions": {
    "additionalDirectories": [
      "/root",
      "/root/.claude",
      "/tmp",
      "/workspace",
      "{{ .Env.CLAUDE_WORKSPACE_PATH }}",
      "{{ .Env.CLAUDE_PATH }}",
      "{{ .Env.CLAUDE_DATA_PATH }}",
      "{{ .Env.CLAUDE_LOGS_PATH }}",
      "{{ .Env.CLAUDE_AGENTS_PATH }}",
      "{{ .Env.CLAUDE_HOOKS_PATH }}",
      "{{ .Env.CLAUDE_PLANS_PATH }}",
      "{{ .Env.CLAUDE_SCRIPTS_PATH }}",
      "{{ .Env.CLAUDE_SKILLS_PATH }}"
    ],
    "defaultMode": "plan"
  },
  "enabledMcpjsonServers": [
    "context7",
    "playwright"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"SessionStart\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/rules_loader python -m src"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/cloud_auth_prompt python -m src"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/session_context_injector python -m src"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"UserPromptSubmit\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/rules_loader python -m src"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/submodule_auto_updater python -m src"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"Stop\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"Notification\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"PreToolUse\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__playwright__*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/playwright_healer python -m src"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"PostToolUse\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"SubagentStop\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"PreCompact\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"SessionEnd\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"PermissionRequest\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_HOOKS_PATH }}/logger python -m src"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  }
}
