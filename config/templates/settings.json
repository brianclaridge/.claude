{
  "model": "Opus",
  "alwaysThinkingEnabled": true,
  "includeCoAuthoredBy": false,
  "env": {
    "MAX_THINKING_TOKENS": "29999",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Task",
      "WebFetch",
      "WebSearch",
      "Skill(git-manager)",
      "Skill(project-metadata-builder)",
      "Skill(aws-login)",
      "Skill(gcp-login)",
      "Skill(metadata)",
      "Skill(session-context)",
      "mcp__context7__*",
      "mcp__playwright__*",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.claude.com)"
    ],
    "deny": [],
    "ask": ["Bash(rm:*)"],
    "defaultMode": "plan",
    "additionalDirectories": [
      "/root",
      "/root/.claude",
      "/tmp",
      "/workspace",
      "{{ .Env.WORKSPACE_PATH }}",
      "{{ .Env.CLAUDE_PATH }}",
      "{{ .Env.CLAUDE_DATA_PATH }}",
      "{{ .Env.CLAUDE_LOGS_PATH }}",
      "{{ .Env.CLAUDE_AGENTS_PATH }}",
      "{{ .Env.CLAUDE_PLANS_PATH }}",
      "{{ .Env.CLAUDE_SCRIPTS_PATH }}",
      "{{ .Env.CLAUDE_SKILLS_PATH }}"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["context7", "playwright"],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"SessionStart\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.rules_loader"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.cloud_auth_prompt"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.session_context_injector"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"UserPromptSubmit\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.rules_loader"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.submodule_auto_updater"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"Stop\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"Notification\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"PreToolUse\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.plan_distributor"
          }
        ]
      },
      {
        "matcher": "mcp__playwright__*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.playwright_healer"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"PostToolUse\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"SubagentStop\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"PreCompact\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"SessionEnd\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "jq '.' >&2; echo '{\"hook_event_name\":\"PermissionRequest\"}'"
          },
          {
            "type": "command",
            "command": "uv run --directory {{ .Env.CLAUDE_PATH }} python -m claude_apps.hooks.logger"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  }
}
