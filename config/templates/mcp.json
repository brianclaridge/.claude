{
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{{ .Env.CONTEXT7_API_KEY }}"
      ]
    },
    "playwright": {
      "command": "bunx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--headless",
        "--browser=chromium",
        "--caps=vision,pdf",
        "--timeout-action=30000",
        "--viewport-size=1920x1080",
        "--isolated"
      ]
    }
  }
}
